	  <None Remove="Examples\IQueryManagerExamples\SuccessExamples\ResultAsParsedJsonValue\GetSecondCompanyCeoName.result.json" />
	  <None Remove="Examples\SharedDemoJsonFiles\GlobalSettings.json" />
	  <None Remove="Examples\SharedDemoJsonFiles\MyServiceSettings.json" />
	  <None Remove="JosnQL.log4net.config" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="Examples\IQueryManagerExamples\SuccessExamples\ResultAsObject\ResultAsNonNullableEmployeesList\Data.json" />
