		<EmbeddedResource Include="Examples\SharedDemoJsonFiles\GlobalSettings.json" />
		<EmbeddedResource Include="Examples\SharedDemoJsonFiles\MyServiceSettings.json" />
	</ItemGroup>
	<ItemGroup>
	  <Content Include="appsettings.json">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	  <Content Include="JosnQL.log4net.config">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	<ItemGroup>
		<Content Include="bin\Debug\net8.0\QueryResult.json" />
	</ItemGroup>

	<ItemGroup>
